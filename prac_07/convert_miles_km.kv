BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: text_input
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Up'
                on_press: app.handle_increment(text_input, 1)
            Button:
                text: 'Down'
                on_press: app.handle_increment(text_input, -1)
    Button:
        text: 'Convert miles to km'
        on_press: app.handle_calculate(text_input)
    Label:
        text: app.output_text
        color: (1, 1, 0, 1)