BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: text_input
            font_size: 72
            on_text: app.handle_calculate(self)
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Up'
                on_press: app.handle_increment(text_input, 1)
                on_press: app.handle_calculate(text_input)
            Button:
                text: 'Down'
                on_press: app.handle_increment(text_input, -1)
                on_press: app.handle_calculate(text_input)
    #Button:
    #    text: 'Convert miles to km'
    #    on_press: app.handle_calculate(text_input)
    Label:
        text: app.output_text
        font_size: 72
        color: (1, 1, 0, 1)